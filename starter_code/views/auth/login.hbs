<h2> Log In </h2>

{{#if errorMessage}}
  <p class="error-message">
    {{ errorMessage }}
  </p>
{{/if}}
<div class="container-fluid">
  <div class="form-group col-4 ">
<form class="form" action="/auth/login" method="post">
  <div class="form-group">
    <label class="col-form-label"  for="email-input"> Email </label>
    <input class="form-control" type="email" name="email" id="email-input"
      placeholder="e.g., xena@warrior.company">
  </div>

  <div class="form-group">
    <label class="col-form-label" for="password-input"> Password </label>
    <input class="form-control" type="password" name="password" id="password-input"
      placeholder="e.g., ••••••••••••">
  </div>
  <div class="form-group">
  <button class="btn btn-primary"> Log In </button>
  </div>
</form>

<p>
  Don't have an account?
  <a href="/auth/signup">
    Create an account.
  </a>
</p>
</div>
</div>